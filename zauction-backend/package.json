{
    "name": "zauction-backend",
    "version": "1.0.0",
    "description": "Backend API for Zauction premium auction platform",
    "main": "dist/server.js",
    "scripts": {
        "dev": "nodemon src/server.ts",
        "build": "tsc",
        "start": "node dist/server.js",
        "start:prod": "npx prisma migrate deploy && npx prisma db seed || true && node dist/server.js",
